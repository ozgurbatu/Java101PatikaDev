package javaexamples;

import java.util.Scanner;

public class Examples06 {

	public static void main(String[] args) {
		/*
		 * Java ile kullanıcıların manavdan almış oldukları ürünlerin kilogram
		 * değerlerine göre toplam tutarını ekrana yazdıran programı yazın.
		 * 
		 * Meyveler ve KG Fiyatları
		 * 
		 * Armut : 2,14 TL Elma : 3,67 TL Domates : 1,11 TL Muz: 0,95 TL Patlıcan : 5,00 TL
		 */
		
		Scanner scan = new Scanner(System.in);
		System.out.print("Armut'tan kaç kilo istiyorsunuz? ");
		double armut = scan.nextDouble();
		
		System.out.print("Elma'dan kaç kilo istiyorsunuz? ");
		double elma = scan.nextDouble();
		
		System.out.print("Domates'ten kaç kilo istiyorsunuz? ");
		double domates = scan.nextDouble();
		
		System.out.print("Muz'dan kaç kilo istiyorsunuz? ");
		double muz = scan.nextDouble();
		
		System.out.print("Patlıcan'dan kaç kilo istiyorsunuz? ");
		double patlıcan = scan.nextDouble();
		
		System.out.print("Toplam tutar :" +((armut*2.14)+(elma*3.67)+(domates*1.11)+(muz*12.5)+(patlıcan*5.0)));
		scan.close();
		

	}

}
