package javaexamples;

import java.util.Scanner;

public class Examples02 {

	public static void main(String[] args) {
		/*
		 * Ödev Eğer girilen tutar 0 ve 1000 TL arasında ise KDV oranı %18 , tutar 1000
		 * TL'den büyük ise KDV oranını %8 olarak KDV tutarı hesaplayan programı
		 * yazınız.
		 */

		Scanner scan = new Scanner(System.in);
		System.out.print("Ücret tutarını giriniz :");
		double tutar = scan.nextDouble();

		System.out.println((tutar > 0 && tutar < 1000) ? (tutar + (tutar * 18 / 100)) : (tutar + (tutar * 8 / 100)));

		scan.close();

	}

}
