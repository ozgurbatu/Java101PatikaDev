package javaexamples;

import java.util.Scanner;

public class Examples03 {

	public static void main(String[] args) {
		
		//  Ödev :Üç kenar uzunluğunu kullanıcıdan aldığınız üçgenin alanını hesaplayan programı yazınız.
		
		Scanner scan = new Scanner(System.in);
		System.out.print("Üçgenin alanı için birinci kenarı giriniz:");
		int a=scan.nextInt();
		
		System.out.print("Üçgenin alanı için ikinci kenarı giriniz:");
		int b=scan.nextInt();
		
		System.out.print("Üçgenin alanı için üçüncü kenarı giriniz:");
		int c=scan.nextInt();
		
		int cevre=(a+b+c)/2;
		double alan=Math.sqrt((cevre*(cevre-a)*(cevre-b)*(cevre-c)));
		
		System.out.print("Üçgenin alanı :"+ alan);
		
		scan.close();
		
		
		
	}

}
